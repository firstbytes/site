    style(type='text/css').
        html {
            padding: 0;
            background: #fff;
            color: #333;
        }
        body {padding: 60px 120px;
          font-family: 'Helvetica';
          font-size: 17px}
        h1, h2, h3 {
          font-family: 'Codystar';
          font-size: 72px;
          font-weight: normal;
          text-align: center;
          margin: 0 0 20px 0;}
        h2 { font-size: 32px;}
        h3 {
            text-align: left;
            font-size: 24px;
            font-weight: normal;
            margin: 20px 0 20px 0;}
        em {
          font-style: italic;
          line-height: 1;
          }
        span {
          font-size: 12px;}
        a {
          color: #000;
          font-weight: bold;
          text-decoration: none;
          border-top: solid 3px transparent;
          border-bottom: solid 3px #666;
          }
        a:hover {
          border-top: solid 3px #ddd;
          background: #ddd;
          }
        div.forms {
          padding: 0px;
          margin: 0px;}
        a.apply {
          margin: 0 20px;
          text-transform: uppercase;
          text-decoration: none;
          font-size: 36px;
          display: inline-block;
          background: #333;
          color: #fff;
          padding: 5px 0;
          width: 300px;
          text-align: center;
          border: none;}
        p {
          line-height: 1.5;}
        .donate-button {
          background: #ccc;
          padding: 10px;
          border: none;
          border-radius: 3px;
          color: #333;
          margin: 5px;
          font-size: 17px;
          cursor: pointer;
        }

